<div class="container">
    <header>
        <div id="cover" class="l-box">
            <div class="cover-wrap">
                <img class="cover-photo" src="{{ profile.cover }}">
            </div>
        </div>
        <div id="profile-menu">
            <div class="menu-wrap pure-g l-box">
                <div class="pure-u-7-24">
                    <div class="avatar">
                        <img src="http://graph.facebook.com/{{ profile.id }}/picture?type=large&redirect=true&width=240&height=240">
                    </div>
                </div>
                <div class="pure-u-17-24">
                    <div class="pure-menu pure-menu-horizontal">
                        <ul class="pure-menu-list">
                            <li class="pure-menu-item">Timelime</li>
                            <li class="pure-menu-item"><a href="#" class="pure-menu-link">About</a></li>
                            <li class="pure-menu-item"><a href="#" class="pure-menu-link">Photo</a></li>
                            <li class="pure-menu-item"><a href="#" class="pure-menu-link">Likes</a></li>
                            <li class="pure-menu-item"><a href="#" class="pure-menu-link">Videos</a></li>
                        </ul>
                  </div>
                </div>
            </div>
            <div class="actions">
                <div class="action-wrap">
                    <a class="pure-button button-small btn-add-friend" href="#"><i class="fa fa-user-plus" aria-hidden="true"></i> Add friend</a>
                    <div class="pure-button-group" role="group" aria-label="...">
                        <button class="pure-button button-small"><i class="fa fa-rss" aria-hidden="true"></i> Follow</button>
                        <button class="pure-button button-small">Message</button>
                        <button class="pure-button button-small">...</button>
                    </div>
                </div>
            </div>
        </div>
    </header>
</div>
